<!DOCTYPE html>
<html>
  <head>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>King of Mointain</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
      <body>
<div class="header">
      <div class="container">
         <div class="logo">
            <a href="#"><img src="<%= image_url('logo.png')%>" height="47" width="213" alt="Царь горы"></a>
         </div>
         <nav class="header_menu">
            <ul>
               <li><a href="<%= root_path %>">Главная</a></li>
               <li><a href="#">о сервисе</a></li>
               <li><a href="#">контакты</a></li>
               <% if user_signed_in? && current_user.admin? %>
                <li><a href="<%= admin_root_path %>">Админ панель</a></li>
               <% end %>
               <% if user_signed_in? %>
                <li><a href="<%= profiles_path %>">Вы вошли как, <%= current_user.name %></a></li>
              <% end %>
            </ul>
         </nav>
         <% unless user_signed_in? %>
         <div class="header_sign">
            <a href="<%= new_user_registration_path %>" class="sign_up">Регистрация</a>
            <a href="<%= new_user_session_path %>" class="sign_in">Вход</a>
          <% end %>
         </div>
      </div>
   </div>

    <%= yield %>
  </body>

</html>
